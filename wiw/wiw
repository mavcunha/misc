#!/bin/bash
# When it works.
# This will run a command and sleep, when it works it 
# will send a notification through the notification center
# dependecies: gem terminal-notifier

INTERVAL=$2
CMD=$1
EXIT=-1

while [[ "${EXIT}" -ne "0" ]]
do 
  eval ${CMD}
  EXIT=$?
  sleep ${INTERVAL}
done
terminal-notifier -title "WIW" -message "${CMD}" 

